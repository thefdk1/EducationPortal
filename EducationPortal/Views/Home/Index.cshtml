@model List<EducationPortal.ViewModels.CourseViewModel>

@section Hero {
    <div class="hero-section bg-primary text-white py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h1 class="display-4 mb-3">Eğitimle Geleceğe Adım Atın</h1>
                    <p class="lead mb-4">Kaliteli eğitim içerikleriyle kendinizi geliştirin, yeni beceriler edinin.</p>
                    <a asp-controller="Course" asp-action="Index" class="btn btn-light btn-lg">
                        <i class="fas fa-book"></i> Eğitimleri Keşfet
                    </a>
                </div>
                <div class="col-md-6 text-center">
                    <img src="~/images/education-hero.svg" alt="Eğitim" class="img-fluid" style="max-height: 400px;">
                </div>
            </div>
        </div>
    </div>
}

<div class="featured-courses py-5">
    <div class="container">
        <h2 class="text-center mb-4">Öne Çıkan Eğitimler</h2>
        
        @if (Model != null && Model.Any())
        {
            <div class="row">
                @foreach (var course in Model.Take(6))
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 shadow-sm">
                            <img src="@course.ThumbnailImagePath" class="card-img-top" alt="@course.Title">
                            <div class="card-body">
                                <h5 class="card-title">@course.Title</h5>
                                <p class="card-text text-muted">@course.Description</p>
                            </div>
                            <div class="card-footer bg-white border-top-0">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="text-muted small">
                                        <i class="fas fa-user"></i> @course.Teacher.FullName
                                    </div>
                                    <a asp-controller="Course" asp-action="Details" asp-route-id="@course.CourseId" 
                                       class="btn btn-outline-primary">
                                        Detaylar
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center text-muted">
                <p>Henüz hiç kurs eklenmemiş.</p>
            </div>
        }
    </div>
</div>

<div class="features bg-light py-5">
    <div class="container">
        <h2 class="text-center mb-4">Neden Biz?</h2>
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <div class="feature-item">
                    <i class="fas fa-graduation-cap fa-3x text-primary mb-3"></i>
                    <h4>Kaliteli Eğitim</h4>
                    <p class="text-muted">Uzman eğitmenler tarafından hazırlanmış kaliteli içerikler.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-item">
                    <i class="fas fa-clock fa-3x text-primary mb-3"></i>
                    <h4>Esnek Öğrenme</h4>
                    <p class="text-muted">Dilediğiniz zaman, dilediğiniz yerden eğitimlere erişim.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-item">
                    <i class="fas fa-users fa-3x text-primary mb-3"></i>
                    <h4>Topluluk Desteği</h4>
                    <p class="text-muted">Diğer öğrencilerle etkileşim ve yardımlaşma imkanı.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .hero-section {
            background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%);
        }
        
        .feature-item {
            padding: 2rem;
            border-radius: 0.5rem;
            background: white;
            transition: transform 0.3s ease;
        }
        
        .feature-item:hover {
            transform: translateY(-5px);
        }
    </style>
}



